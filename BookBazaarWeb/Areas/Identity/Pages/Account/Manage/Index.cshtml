@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Manage my account info";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<form id="profile-form"
      method="post"
      class="CreateCategoryForm row d-flex align-items-center justify-content-lg-around justify-content-xl-around justify-content-md-center justify-content-sm-center justify-content-center m-0">
    <div class="col-lg-6 col-xl-6 col-md-11 col-sm-11 col-11 border mt-3 Shadow1 rounded-2 p-3 mt-4 mb-4">
        <h2 class="text-primary text-center">Manage my account details</h2>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="ValidationSummary"></div>
        @*<input hidden asp-for="Id">*@
        <div class="mb-3 d-flex flex-row justify-content-around align-items-center">
            <div class="col-11">
                <label asp-for="@Model.Input.Name" class="ml-1 mt-2"></label>
                <span asp-validation-for="@Model.Input.Name" class="ValidationError"></span>
                <input asp-for="@Model.Input.Name" class="form-control TextInput mt-">
            </div>
        </div>
        <div class="mb-3 d-flex flex-row justify-content-around align-items-center">
            <div class="col-11">
                <label asp-for="@Model.Input.PhoneNumber" class="ml-1 mt-2"></label>
                <input asp-for="@Model.Input.PhoneNumber" class="form-control TextInput mt-">
            </div>
        </div>
        <div class="mb-3 d-flex flex-row justify-content-around align-items-center">
            <div class="col-11">
                <label asp-for="@Model.Input.Email" class="ml-1 mt-2"></label>
                <input asp-for="@Model.Input.Email" class="form-control TextInput mt-">
            </div>
        </div>
        <div class="mb-3 d-flex justify-content-around">
            <div class="col-5">
                <label asp-for="@Model.Input.Country" class="ml-1 mt-2"></label>
                <span asp-validation-for="@Model.Input.Country" class="ValidationError"></span>
                <input asp-for="@Model.Input.Country" class="form-control TextInput mt-1">
            </div>
            <div class="col-5">
                <label asp-for="@Model.Input.City" class="ml-1 mt-2"></label>
                <span asp-validation-for="@Model.Input.City" class="ValidationError"></span>
                <input asp-for="@Model.Input.City" class="form-control TextInput mt-1">
            </div>
        </div>
        <div class="mb-3 d-flex flex-row justify-content-around align-items-center">
            <div class="col-11">
                <label asp-for="@Model.Input.Address" class="ml-1 mt-2"></label>
                <span asp-validation-for="@Model.Input.Address" class="ValidationError"></span>
                <input asp-for="@Model.Input.Address" class="form-control TextInput mt-">
            </div>
        </div>
        <button id="update-profile-button" type="submit" class="button-primary mt-4 SubmitNewCategory ForcedMargin Shadow2 rounded-3">Update</button>
    </div>
    <img src="~/img/undraw_profile_image_re_ic2f.svg"
         alt="Profile image Ilustration"
         class="CreateCategoryImage col-lg-6 col-xl-6 d-sm-none d-none d-md-none d-lg-block d-xl-block"/>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}