@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Category>

@{
    ViewData["Title"] = "Manage categories";
}

<partial name="OperationResult"></partial>
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-end">
            <button onclick="location.href='@Url.Action("Create", "Category")'" class="button primary Button AddButton">
                <i class="bi bi-plus-square-fill"></i>
                Add category
            </button>
        </div>
    </div>
    <table class="mt-4 table table-bordered table-striped text-center">
        <thead class="TableHeading box-shadow">
        <th>Genre</th>
        <th></th>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr class="m-0 p-0">
                <td class="align-middle">@Html.DisplayName(category.Genre)</td>
                <td class="align-middle">
                    <div class="btn-group d-flex align-items-center justify-content-evenly" role="group">
                        <a
                            asp-controller="Category"
                            asp-action="Update"
                            asp-route-id="@category.Id"
                            class="button Button EditButton">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <button asp-controller="Category"
                                data-url="@Url.Action("Delete", "Category", new { id = category.Id })"
                                class="button Button DeleteButton">
                            <i class="bi bi-x-square-fill"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<script src="~/js/ajax/Category/DeleteCategory.js"></script>