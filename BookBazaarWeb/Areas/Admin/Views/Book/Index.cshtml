@using Newtonsoft.Json
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<BookBazaar.Models.BookModels.Book>

<partial name="OperationResult"></partial>
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2>Books</h2>
        </div>
        <div class="col-6 text-end">
            <button onclick="location.href='@Url.Action("Create", "Book")'" class="button primary Button AddButton">
                <i class="bi bi-plus-square-fill"></i>
                Add a book
            </button>
        </div>
    </div>
    <table class="mt-4 table table-bordered table-striped text-center row-cols-6">
        <thead class="TableHeading box-shadow">
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Isbn</th>
        <th>Publisher</th>
        <th>Language</th>
        <th>Date published</th>
        <th>Price</th>
        <th></th>
        </thead>
        <tbody>
        @foreach (var book in Model)
        {
            <tr class="m-0 p-0">
                <td class="align-middle">@Html.DisplayName(book.Title)</td>
                <td class="align-middle">@Html.DisplayName(book.Author)</td>
                <td
                    data-json="@JsonConvert.SerializeObject(book)"
                    class="align-middle TableDefinition HovarableTableData">
                    @book.Description
                </td>
                <td class="align-middle">@Html.DisplayName(book.Isbn)</td>
                <td class="align-middle">@Html.DisplayName(book.Publisher)</td>
                <td class="align-middle">@Html.DisplayName(book.Language)</td>
                <td class="align-middle">@Html.DisplayName(book.DatePublished.ToShortDateString())</td>
                <td class="align-middle">@Html.DisplayName(book.Price.ToString(new CultureInfo("en-US"))) &euro;</td>
                <td class="align-middle border-end-0">
                    <div class="d-flex align-items-center justify-content-around w-100" role="group">
                        <a
                            asp-controller="Book"
                            asp-action="Update"
                            asp-route-id="@book.Id"
                            class="button Button EditButton">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <button asp-controller="Book"
                                data-url="@Url.Action("Delete", "Category", new { id = book.Id })"
                                class="button Button DeleteButton">
                            <i class="bi bi-x-square-fill"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<script src="~/js/BookDescriptionModal.js" type="module"></script>